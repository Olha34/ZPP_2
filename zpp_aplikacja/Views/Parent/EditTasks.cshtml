@page
@model zpp_aplikacja.Pages.Models.Tasks


<form asp-action="EditTasks" method="post">
    <div class="form-group">
        @Html.LabelFor(x=>x.Name)
        @Html.EditorFor(x=>x.Name)
        @Html.ValidationMessageFor(x=>x.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Points)
        @Html.EditorFor(x => x.Points)
        @Html.ValidationMessageFor(x => x.Points)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Status)
        @Html.EditorFor(x => x.Status)
        @Html.ValidationMessageFor(x => x.Status)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Description)
        @Html.EditorFor(x => x.Description)
        @Html.ValidationMessageFor(x => x.Description)
    </div>
    <button type="submit" class="btn btn-primary">Dodaj zadanie</button>
</form>