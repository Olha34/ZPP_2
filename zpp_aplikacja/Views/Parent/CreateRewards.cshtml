@model zpp_aplikacja.Pages.Models.Reward

<link rel="stylesheet" href="~/css/style.css" />


@{
    ViewData["Title"] = "Dodaj nową nagrodę";
}

<h1>Dodaj nową nagrodę</h1>

<form asp-action="CreateRewards" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PointsRequired"></label>
        <input asp-for="PointsRequired" class="form-control" />
        <span asp-validation-for="PointsRequired" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Dodaj nagrodę</button>
</form>